---
interface Props {
	class?: string;
	style?: string;
    height?: string;
}

const { class: className, style, height = "40px" } = Astro.props;
---

<svg 
    viewBox="0 0 100 100" 
    xmlns="http://www.w3.org/2000/svg" 
    class={className}
    style={`${style}; height: ${height}; vertical-align: middle;`}
>
    <path d="M50 10 L85 50 L50 90 L15 50 Z" fill="none" stroke="currentColor" stroke-width="2" />
    <circle cx="50" cy="50" r="15" fill="none" stroke="currentColor" stroke-width="1.5" />
    <line x1="50" y1="10" x2="50" y2="90" stroke="currentColor" stroke-width="1" opacity="0.6" />
    <line x1="15" y1="50" x2="85" y2="50" stroke="currentColor" stroke-width="1" opacity="0.6" />
</svg>
